<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"

              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              tools:context=".Fragments.BrowseFragment" android:baselineAligned="false" android:orientation="vertical"
              android:padding="10dp">
    <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|left"
            android:iconifiedByDefault="false"
            android:background="@drawable/rounded_searchview"
            android:queryBackground="@null"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="100">
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <Button
                android:text="Search by tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tagsButton" android:layout_weight="10"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="19"/>
        <Button
                android:text="Search by fandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/fandomButtons" android:layout_weight="10"/>
    </LinearLayout>
</LinearLayout>