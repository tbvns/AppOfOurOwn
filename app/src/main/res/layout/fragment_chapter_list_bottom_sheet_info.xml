<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.ChapterListBottomSheetInfo" android:orientation="vertical"
        android:gravity="center_horizontal" android:padding="16dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/views_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:id="@+id/imageView9" android:layout_weight="1"
                android:tint="@color/midnightdusk_onBackground"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/hits" android:layout_weight="1"
                android:gravity="center" android:textSize="15sp" android:paddingEnd="5dp"
                android:paddingStart="2dp"/>
        <ImageView
                android:src="@drawable/words_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:id="@+id/imageView8" android:layout_weight="1"
                android:tint="@color/midnightdusk_onBackground"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1"
                android:gravity="center" android:textSize="15sp" android:id="@+id/words" android:paddingEnd="5dp"
                android:paddingStart="2dp"/>
        <ImageView
                android:src="@drawable/chapters_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:id="@+id/imageView7" android:layout_weight="1"
                android:tint="@color/midnightdusk_onBackground"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/chapters" android:layout_weight="1"
                android:gravity="center" android:textSize="15sp" android:paddingEnd="5dp"
                android:paddingStart="2dp"/>
        <ImageView
                android:src="@drawable/likes_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:id="@+id/imageView6" android:layout_weight="1"
                android:tint="@color/midnightdusk_onBackground"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/kudos" android:layout_weight="1"
                android:gravity="center" android:textSize="15sp" android:paddingEnd="5dp"
                android:paddingStart="2dp"/>
        <ImageView
                android:src="@drawable/bookmark_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:id="@+id/imageView" android:layout_weight="1"
                android:tint="@color/midnightdusk_onBackground"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/bookmark" android:layout_weight="1"
                android:gravity="center" android:textSize="15sp" android:paddingEnd="5dp"
                android:paddingStart="2dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/history_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:id="@+id/imageView2" android:layout_weight="1"
                android:tint="@color/midnightdusk_onBackground"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/update" android:layout_weight="1"
                android:gravity="center" android:textSize="15sp" android:paddingStart="2dp"
                android:paddingLeft="5dp" android:paddingEnd="5dp"/>
        <ImageView
                android:src="@drawable/translate_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:id="@+id/imageView5" android:layout_weight="1"
                android:tint="@color/midnightdusk_onBackground"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/language" android:layout_weight="1"
                android:gravity="center" android:textSize="15sp" android:paddingStart="2dp"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:requiresFadingEdge="vertical" android:fadingEdgeLength="30dp"
            android:fadingEdge="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <!-- Fandom Section -->
            <TextView
                    android:id="@+id/fandomTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fandom"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>
            <LinearLayout
                    android:id="@+id/fandomButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            />
            <androidx.constraintlayout.widget.Barrier
                    android:layout_height="match_parent"
                    app:barrierDirection="top" android:padding="10dp" android:layout_width="match_parent"
            />

            <!-- Tags Section -->
            <TextView
                    android:id="@+id/tagsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" android:paddingTop="8dp"/>

            <LinearLayout
                    android:id="@+id/tagsButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>